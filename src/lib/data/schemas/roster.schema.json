{
    "$schema": "http://json-schema.org/draft-07/schema",

    "type": "object",
    "required": ["slug", "team", "players"],
    "additionalProperties": false,
    "properties": {
        "$schema": { "type": "string", "format": "uri-reference" },

        "slug": { "$ref": "slug.schema.json" },
        "team": { "$ref": "slug.schema.json" },
        "players": { "type": "array", "items": { "$ref": "slug.schema.json" } },
        "duration": { "$ref": "daterange.schema.json" }
    }
}
