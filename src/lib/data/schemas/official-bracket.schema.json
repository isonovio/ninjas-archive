{
    "$schema": "http://json-schema.org/draft-07/schema",

    "type": "object",
    "required": ["slug", "name"],
    "additionalProperties": false,
    "properties": {
        "slug": { "$ref": "../schemas/slug.schema.json" },
        "name": { "type": "string" },
        "duration": { "$ref": "../schemas/daterange.schema.json" },
        "links": { "type": "array", "items": { "$ref": "../schemas/extern-link.schema.json" } },
        "participants": { "type": "array", "items": { "$ref": "../schemas/official-lineup.schema.json#/$defs/shorthand" } },
        "brackets": { "type": "array", "items": { "$ref": "../schemas/official-bracket.schema.json" } },
        "matches": { "type": "array", "items": { "$ref": "../schemas/official-match.schema.json" } },
        "note": { "type": "string" }
    }
}
