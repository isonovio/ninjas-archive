{
    "$schema": "https://json-schema.org/draft-07/schema",

    "type": "object",
    "required": ["slug", "title", "date", "related", "links"],
    "additionalProperties": false,
    "properties": {
        "$schema": { "type": "string", "format": "uri-reference" },

        "slug": { "$ref": "../schemas/slug.schema.json" },
        "title": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "related": { "$ref": "../schemas/related.schema.json" },
        "links": { "type": "array", "items": { "$ref": "../schemas/extern-link.schema.json" } }
    }
}
